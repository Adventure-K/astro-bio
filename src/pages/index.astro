---
import { Icon } from "astro-icon";
import { mainContent, links, socialLinks } from "../links";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css2?family=Libre+Baskerville&family=Cairo"
    />
    <title>Andrew Kane</title>
    <style>
      :root {
        --astro-gradient: linear-gradient(90deg, #5df755, #eeff00);
      }
      body {
        background-image: linear-gradient(45deg, #212121, #656565);
        color: #fff;
        font-family: Libre Baskerville, Book Antiqua, Times New Roman;
      }
      a {
        color: inherit;
      }
      ul {
        list-style: none;
        padding: 0;
        margin: 0;
      }

      @keyframes animateBg {
        0% {
          background-position: 100% 0%;
        }
        100% {
          background-position: 0% 0%;
        }
      }

      .name {
        font-size: 6vh;
        background-image: linear-gradient(
          90deg,
          #5df755,
          #eeff00,
          #5df755,
          #eeff00
        );
        background-size: 300% 100%;
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        animation: animateBg 3s linear infinite;
      }

      .main__article {
        margin: 0 auto;
        max-width: 700px;
        display: flex;
        flex-direction: column;
        align-items: center;
        /* justify-content: center; */
        min-height: 90vh;
        padding: 10vh 1rem;
      }
      .top__content {
        margin-bottom: 2rem;
        text-align: center;
      }
      .profile__img {
        /* border-image: var(--astro-gradient); */
        /* border-image-slice: 30 fill; */
        /* background-size: 300% 100%; */
        border-radius: 50%;
        border-width: 2px; 
        border-style: solid;
        /* animation: animateBg 2s linear infinite; */
        /* margin-bottom: 1rem; */
      }
      .social-links__list {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        grid-gap: 1rem;
        margin-top: 4vh;
      }
      .social-links__list .social-links__link {
        transition: transform 100ms ease-in-out;
      }
      .social-links__list .social-links__link:hover {
        transform: scale(1.1);
      }
      .links__list {
        width: 100%;
        margin: 1rem auto;
        display: flex;
        flex-direction: column;
        align-items: center;
      }
      .links__list .links__link {
        font-family: Cairo;
        display: flex;
        width: 100%;
        text-align: center;
        background-color: #fff;
        color: #212121;
        margin-bottom: 1rem;
        border-radius: 3rem;
        transition: transform 100ms ease-in-out;
        cursor: pointer;
      }
      .links__list .links__link a {
        padding: 1rem 2rem;
        width: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
        text-decoration: none;
      }
      .links__list .links__link:hover {
        transform: scale(1.025);
      }
    </style>
  </head>
  <body>
    <article class="main__article">
      <div class="top__content">
        <img
          class="profile__img"
          width="128px"
          height="128px"
          src={mainContent.imgSrc}
          alt={`Profile image of ${mainContent.name}`}
        />
        <h1 class="name">{mainContent.name}</h1>
        <p>{mainContent.tagline}</p>
        <ul class="social-links__list">
          {
            socialLinks.map((link) => (
              <li class="social-links__link">
                <a href={link.url}>
                  <Icon name={link.icon} width="36px" height="36px" />
                </a>
              </li>
            ))
          }
        </ul>
      </div>
      <ul class="links__list">
        {
          links.map((link) => (
            <li class="links__link">
              <a href={link.url}>{link.text}</a>
            </li>
          ))
        }
      </ul>
    </article>
  </body>
</html>
